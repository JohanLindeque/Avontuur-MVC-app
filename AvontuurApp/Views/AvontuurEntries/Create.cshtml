@model AvontuurEntry


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div ="card">
                <div class="card-header bg-info text-white">
                    <h2>Create Avontuur Entry</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="Enter the location" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CreatedAt" class="form-label">Date</label>
                            <input asp-for="CreatedAt" class="form-control" type="date" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <input asp-for="Content" row="5"class="form-control" placeholder="Enter what you did" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-controller="AvontuurEntries" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>